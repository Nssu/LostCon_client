<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/regist_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_below="@+id/menu_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:layout_marginRight="11.3dp"
        android:layout_marginLeft="11.3dp"
        android:layout_marginBottom="10.3dp"
        android:gravity="center_horizontal"
        android:background="@drawable/white_rec_shape">



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/regist_image"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_gravity="center"
        android:src="@drawable/watch"
        app:riv_border_color="@color/gray"
        app:riv_border_width="1px"
        app:riv_corner_radius="166dp"
        android:layout_marginTop="23.3dp"
        android:onClick="onclick"
        android:scaleType="centerCrop"/>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="294.3dp"
            android:layout_height="37dp"
            android:background="@drawable/edit_box_long"
            android:text="시계"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"/>
        
        <RelativeLayout
            android:layout_width="294.3dp"
            android:layout_height="37dp"
            android:background="@drawable/edit_box_long"
            android:layout_marginTop="17.3dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MiniBeacon_15454"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="16.2sp"/>
            
            <Button
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/search_black"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="285dp"
            android:layout_height="80.3dp"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/text_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리설정"
                android:textColor="@color/black"
                android:textSize="16.2sp"/>

           <SeekBar
               android:id="@+id/seekbar"
               android:layout_below="@+id/text_distance"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:max="70"
               android:min="30"/>

            <LinearLayout
                android:layout_below="@id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30m"
                    android:layout_marginLeft="9dp"
                    android:textSize="13.8sp"
                    android:layout_weight="1"/>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50m"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                android:textSize="13.8sp"
                android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:text="70m"
                    android:layout_marginRight="9dp"
                    android:textSize="13.8sp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알림설정"
                android:textColor="@color/black"
                android:textSize="16.2sp"/>
            
            <Switch
                android:layout_marginLeft="14dp"
                android:layout_width="49.7dp"
                android:layout_height="26dp"
                android:checked="true"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/add_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="13dp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/delete_white"
                android:onClick="onclick"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="삭제하기"
                android:textSize="10sp"
                android:textColor="@color/blue"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="65dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/submit_white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확인하기"
                android:textSize="10sp"
                android:textColor="@color/blue"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="65dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cancel_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="15dp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/cancel_white"
                android:onClick="onclick"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="취소하기"
                android:textSize="10sp"
                android:textColor="@color/blue"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>


</RelativeLayout>