<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <android.support.v4.widget.DrawerLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_drawer"
            android:fitsSystemWindows="true"
            tools:openDrawer="start" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/menu_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/line_menu"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"/>



                <LinearLayout
                    android:id="@+id/mapLayout"
                    android:layout_marginTop="48.7dp"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center_horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-10dp"
                    android:visibility="visible"
                    android:id="@+id/chat_sliding"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:orientation="@android:color/transparent"
                    android:descendantFocusability="afterDescendants"
                    android:focusable="false">

                <LinearLayout
                    android:id="@+id/layout_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="11.3dp"
                    android:layout_marginLeft="11.3dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/chat_background">

                    <ImageView
                        android:layout_marginTop="12dp"
                        android:layout_width="88.3dp"
                        android:layout_height="6dp"
                        android:src="@drawable/chat_start"/>



                    <!-- 채팅내용 출력창 -->
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:id="@+id/recycler_chat"
                        android:layout_width="320dp"
                        android:layout_height="240dp"
                        android:orientation="vertical"
                        android:background="@color/White">


                    </android.support.v7.widget.RecyclerView>

                    <!-- 채팅 입력창 -->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="330dp"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:background="@drawable/chat_final"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:descendantFocusability="afterDescendants"
                        android:paddingLeft="10dp">

                        <EditText
                            android:id="@+id/chat_edit"
                            android:layout_width="276dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_height="wrap_content"
                            android:hint="입력창"/>

                        <Button
                            android:id="@+id/chat_submit"
                            android:layout_width="25.7dp"
                            android:layout_height="25.7dp"
                            android:background="@drawable/chat_submit"/>

                    </LinearLayout>





                </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <include
                layout="@layout/drawer_user"/>
        </android.support.v4.widget.DrawerLayout>






</RelativeLayout>