<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#99000000"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="183dp"
        android:background="@drawable/popup_background"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="19dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아무도 도움을 주지 않았네요.
다시 요청하시겠습니까?"
                android:textSize="15.2sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="19dp">
                
                <Button
                    android:layout_width="118.3dp"
                    android:layout_height="36dp"
                    android:background="@drawable/short_box"
                    android:text="위치만 요청"
                    android:layout_marginRight="19.7dp"
                    android:textColor="@color/White"/>

                <Button
                    android:layout_width="118.3dp"
                    android:layout_height="36dp"
                    android:background="@drawable/short_box"
                    android:text="1:1대화도 요청"
                    android:textColor="@color/White"/>
                
            </LinearLayout>

            <Button
                android:layout_marginTop="15dp"
                android:layout_width="256dp"
                android:layout_height="36dp"
                android:background="@drawable/long_box"
                android:text="취소하기"
                android:textColor="@color/White"/>

        </LinearLayout>



    </RelativeLayout>
</LinearLayout>